<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical" >

    <!--标题-->
    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:layout_marginTop="0dp"
        android:text="试用"
        android:textSize="19sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="vertical">
        <!--机器码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="机器码"/>
            <EditText
                android:id="@+id/txtMCode"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:layout_marginStart="10dp"
                android:text="1234567890123456"
                android:editable="false"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
        <!--激活码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="激活码"/>
            <EditText
                android:id="@+id/txtACode"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:layout_marginStart="10dp"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCopyMCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_bottomleft_shape"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="复制机器码"
            android:textSize="12sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <TextView
            android:id="@+id/lblTryOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="继续试用"
            android:textSize="12sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <TextView
            android:id="@+id/lblActive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_bottomright_shape"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="激活"
            android:textSize="12sp"
            android:textColor="#000000"/>


    </LinearLayout>


</LinearLayout>